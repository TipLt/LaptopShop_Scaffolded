<Window x:Class="LaptopShop.Views.LaptopEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Edit Laptop" Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,0">
            <TextBlock x:Name="HeaderText"
                       Text="Edit Laptop" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Border Background="White" 
                    Margin="20"
                    Padding="20"
                    BorderBrush="#BDC3C7" 
                    BorderThickness="1"
                    CornerRadius="5">
                <StackPanel>
                    <!-- Brand -->
                    <TextBlock Text="Brand:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="BrandTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- Model -->
                    <TextBlock Text="Model:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="ModelTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- Processor -->
                    <TextBlock Text="Processor:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="ProcessorTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- RAM -->
                    <TextBlock Text="RAM:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="RamTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- Storage -->
                    <TextBlock Text="Storage:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="StorageTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- GPU -->
                    <TextBlock Text="GPU:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="GpuTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- Price -->
                    <TextBlock Text="Price (VND):" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="PriceTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- Stock -->
                    <TextBlock Text="Stock:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="StockTextBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Margin="0,0,0,15"/>

                    <!-- Description -->
                    <TextBlock Text="Description:" FontSize="13" Foreground="#34495E" Margin="0,0,0,5"/>
                    <TextBox x:Name="DescriptionTextBox"
                             Height="80"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,15"/>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ’¾ Save"
                        Width="100"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="SaveButton_Click"
                        Background="#27AE60"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="Cancel"
                        Width="100"
                        Height="35"
                        Click="CancelButton_Click"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
