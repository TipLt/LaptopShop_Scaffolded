<Window x:Class="LaptopShop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Laptop Shop - Login" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" CornerRadius="0">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="LAPTOP SHOP" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Management System" 
                           FontSize="14" 
                           Foreground="#BDC3C7"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="40,30,40,40"
                CornerRadius="5"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
            <StackPanel Margin="30">
                <TextBlock Text="Login to Your Account" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Username -->
                <TextBlock Text="Username:" 
                           FontSize="13" 
                           Foreground="#34495E"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameTextBox"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="35"
                         Padding="10,8"
                         FontSize="13"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         Margin="0,0,0,15"
                         KeyDown="InputField_KeyDown"/>

                <!-- Password -->
                <TextBlock Text="Password:" 
                           FontSize="13" 
                           Foreground="#34495E"
                           Margin="0,0,0,5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="35"
                             Padding="10,8"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             BorderThickness="1"
                             Margin="0,0,0,15"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             KeyDown="InputField_KeyDown"/>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red"
                           FontSize="12"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Login Button -->
                <Button Content="LOGIN"
                        Command="{Binding LoginCommand}"
                        Height="40"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Background="#3498DB"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,10,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498DB"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3"
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980B9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Info Text -->
                <TextBlock Text="Default: admin/admin123, sales1/sales123" 
                           FontSize="10" 
                           Foreground="#95A5A6"
                           HorizontalAlignment="Center"
                           Margin="0,15,0,0"
                           TextWrapping="Wrap"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
