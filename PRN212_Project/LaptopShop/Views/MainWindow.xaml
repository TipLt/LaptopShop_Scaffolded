<Window x:Class="LaptopShop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaptopShop"
        mc:Ignorable="d"
        Title="Laptop Shop - Dashboard" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50">
            <Grid>
                <StackPanel VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="LAPTOP SHOP MANAGEMENT" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="{Binding WelcomeMessage}" 
                               FontSize="13" 
                               Foreground="#BDC3C7"
                               Margin="0,5,0,0"/>
                </StackPanel>
                <Button Content="LOGOUT"
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Width="100"
                        Height="35"
                        Background="#E74C3C"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="3">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,30,30,20">
                <TextBlock Text="Management Modules" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,20"/>

                <!-- Management Cards -->
                <WrapPanel>
                    <!-- Laptops -->
                    <Button Command="{Binding ManageLaptopsCommand}"
                            Visibility="{Binding CanAccessLaptops, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,15,15"
                            Width="250" Height="120"
                            Background="White"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                <StackPanel VerticalAlignment="Center" Margin="20">
                                                    <TextBlock Text="💻" 
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Laptop Management" 
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Manage laptop inventory" 
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#3498DB"/>
                                        <Setter Property="BorderBrush" Value="#3498DB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Orders -->
                    <Button Command="{Binding ManageOrdersCommand}"
                            Visibility="{Binding CanAccessOrders, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,15,15"
                            Width="250" Height="120"
                            Background="White"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                <StackPanel VerticalAlignment="Center" Margin="20">
                                                    <TextBlock Text="📦" 
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Order Management" 
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Process customer orders" 
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#9B59B6"/>
                                        <Setter Property="BorderBrush" Value="#9B59B6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Customers -->
                    <Button Command="{Binding ManageCustomersCommand}"
                            Visibility="{Binding CanAccessCustomers, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,15,15"
                            Width="250" Height="120"
                            Background="White"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                <StackPanel VerticalAlignment="Center" Margin="20">
                                                    <TextBlock Text="👥" 
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Customer Management" 
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Manage customer data" 
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#1ABC9C"/>
                                        <Setter Property="BorderBrush" Value="#1ABC9C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Categories -->
                    <Button Command="{Binding ManageCategoriesCommand}"
                            Visibility="{Binding CanAccessCategories, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,15,15"
                            Width="250" Height="120"
                            Background="White"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                <StackPanel VerticalAlignment="Center" Margin="20">
                                                    <TextBlock Text="📑" 
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Category Management" 
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Organize product categories" 
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F39C12"/>
                                        <Setter Property="BorderBrush" Value="#F39C12"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Suppliers -->
                    <Button Command="{Binding ManageSuppliersCommand}"
                            Visibility="{Binding CanAccessSuppliers, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,15,15"
                            Width="250" Height="120"
                            Background="White"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                <StackPanel VerticalAlignment="Center" Margin="20">
                                                    <TextBlock Text="🏭" 
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="Supplier Management" 
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Manage supplier relationships" 
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E67E22"/>
                                        <Setter Property="BorderBrush" Value="#E67E22"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!-- Users (Admin only) -->
                    <Button Command="{Binding ManageUsersCommand}"
                            Visibility="{Binding CanAccessUsers, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="0,0,15,15"
                            Width="250" Height="120"
                            Background="White"
                            BorderBrush="#BDC3C7"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="5">
                                                <StackPanel VerticalAlignment="Center" Margin="20">
                                                    <TextBlock Text="⚙️" 
                                                               FontSize="36"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,10"/>
                                                    <TextBlock Text="User Management" 
                                                               FontSize="16"
                                                               FontWeight="SemiBold"
                                                               Foreground="#2C3E50"
                                                               HorizontalAlignment="Center"/>
                                                    <TextBlock Text="Manage system users" 
                                                               FontSize="11"
                                                               Foreground="#7F8C8D"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,5,0,0"/>
                                                </StackPanel>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#34495E"/>
                                        <Setter Property="BorderBrush" Value="#34495E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#34495E">
            <TextBlock Text="© 2024 Laptop Shop Management System - All Rights Reserved" 
                       FontSize="11" 
                       Foreground="#BDC3C7"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
