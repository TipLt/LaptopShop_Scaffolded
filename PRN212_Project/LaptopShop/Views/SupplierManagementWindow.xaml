<Window x:Class="LaptopShop.Views.SupplierManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Supplier Management" Height="450" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495E" Padding="20,0">
            <TextBlock Text="ðŸ­ Supplier Management" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="20" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
            <DataGrid ItemsSource="{Binding Suppliers}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding SupplierId}" Width="60"/>
                    <DataGridTextColumn Header="Supplier Name" Binding="{Binding SupplierName}" Width="180"/>
                    <DataGridTextColumn Header="Contact Person" Binding="{Binding ContactPerson}" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="180"/>
                    <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20,0">
            <Button Content="Close" HorizontalAlignment="Right" Width="100" Height="35"
                    Click="CloseButton_Click" Background="#95A5A6" Foreground="White" BorderThickness="0"/>
        </Border>
    </Grid>
</Window>
