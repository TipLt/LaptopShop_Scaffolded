<Window x:Class="LaptopShop.Views.CustomerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Details" Height="450" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495E" Padding="20,0">
            <TextBlock x:Name="HeaderText"
                       Text="Customer Details" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="20" Padding="20" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="Customer Name:" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="NameTextBox" Height="35" Padding="10,8" Margin="0,0,0,15"/>

                <TextBlock Text="Email:" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" Height="35" Padding="10,8" Margin="0,0,0,15"/>

                <TextBlock Text="Phone:" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="PhoneTextBox" Height="35" Padding="10,8" Margin="0,0,0,15"/>

                <TextBlock Text="Address:" FontSize="13" Margin="0,0,0,5"/>
                <TextBox x:Name="AddressTextBox" Height="70" Padding="10,8" TextWrapping="Wrap" AcceptsReturn="True"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="ðŸ’¾ Save" Width="100" Height="35" Margin="0,0,10,0"
                        Click="SaveButton_Click" Background="#27AE60" Foreground="White" BorderThickness="0"/>
                <Button Content="Cancel" Width="100" Height="35"
                        Click="CancelButton_Click" Background="#95A5A6" Foreground="White" BorderThickness="0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
