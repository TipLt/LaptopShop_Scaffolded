<Window x:Class="LaptopShop.Views.LaptopManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Laptop Management" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#34495E" Padding="20,0">
            <TextBlock Text="ðŸ’» Laptop Management" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Laptop List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,10">
                        <Button Content="âž• Add"
                                Command="{Binding AddCommand}"
                                Width="80" Height="35"
                                Margin="0,0,10,0"
                                Background="#27AE60"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="âœï¸ Edit"
                                Command="{Binding EditCommand}"
                                Width="80" Height="35"
                                Margin="0,0,10,0"
                                Background="#3498DB"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="ðŸ—‘ï¸ Delete"
                                Command="{Binding DeleteCommand}"
                                Width="80" Height="35"
                                Margin="0,0,10,0"
                                Background="#E74C3C"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                        <Button Content="ðŸ”„ Refresh"
                                Command="{Binding RefreshCommand}"
                                Width="90" Height="35"
                                Margin="0,0,10,0"
                                Background="#95A5A6"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding Laptops}"
                              SelectedItem="{Binding SelectedLaptop}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Margin="15,0,15,15">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding LaptopId}" Width="50"/>
                            <DataGridTextColumn Header="Brand" Binding="{Binding Brand}" Width="100"/>
                            <DataGridTextColumn Header="Model" Binding="{Binding Model}" Width="150"/>
                            <DataGridTextColumn Header="Processor" Binding="{Binding Processor}" Width="150"/>
                            <DataGridTextColumn Header="RAM" Binding="{Binding Ram}" Width="80"/>
                            <DataGridTextColumn Header="Storage" Binding="{Binding Storage}" Width="80"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat='{}{0:N0} VND'}" Width="120"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Details Panel -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#BDC3C7" 
                    BorderThickness="1"
                    CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Laptop Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Brand:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Brand}" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Model:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Model}" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Processor:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Processor}" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="RAM:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Ram}" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Storage:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Storage}" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="GPU:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Gpu}" 
                                   FontSize="14" 
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="Price:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Price, StringFormat='{}{0:N0} VND'}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Foreground="#27AE60"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Stock:" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Stock}" 
                                   FontSize="14" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Description:" FontSize="12" Foreground="#7F8C8D" Margin="0,10,0,3"/>
                        <TextBlock Text="{Binding SelectedLaptop.Description}" 
                                   FontSize="13" 
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20,0">
            <Button Content="Close"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Width="100"
                    Height="35"
                    Click="CloseButton_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Border>
    </Grid>
</Window>
