<Window x:Class="LaptopShop.Views.OrderManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Order Management" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495E" Padding="20,0">
            <TextBlock Text="ðŸ“¦ Order Management" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="20" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
            <DataGrid ItemsSource="{Binding Orders}"
                      SelectedItem="{Binding SelectedOrder}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="80"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding Customer.CustomerName}" Width="150"/>
                    <DataGridTextColumn Header="Order Date" Binding="{Binding OrderDate, StringFormat='dd/MM/yyyy'}" Width="120"/>
                    <DataGridTextColumn Header="Total Amount" Binding="{Binding TotalAmount, StringFormat='{}{0:N0} VND'}" Width="150"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20,0">
            <Button Content="Close"
                    HorizontalAlignment="Right"
                    Width="100" Height="35"
                    Click="CloseButton_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"/>
        </Border>
    </Grid>
</Window>
