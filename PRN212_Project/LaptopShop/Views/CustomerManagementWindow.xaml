<Window x:Class="LaptopShop.Views.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Management" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#ECF0F1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#34495E" Padding="20,0">
            <TextBlock Text="ðŸ‘¥ Customer Management" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="White"
                       VerticalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="White" Margin="20" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,10">
                    <Button Content="âž• Add"
                            Command="{Binding AddCommand}"
                            Width="80" Height="35"
                            Margin="0,0,10,0"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="ðŸ—‘ï¸ Delete"
                            Command="{Binding DeleteCommand}"
                            Width="80" Height="35"
                            Background="#E74C3C"
                            Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>

                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Customers}"
                          SelectedItem="{Binding SelectedCustomer}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="15,0,15,15">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding CustomerId}" Width="50"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding CustomerName}" Width="200"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="0,1,0,0" Padding="20,0">
            <Button Content="Close"
                    HorizontalAlignment="Right"
                    Width="100" Height="35"
                    Click="CloseButton_Click"
                    Background="#95A5A6"
                    Foreground="White"
                    BorderThickness="0"/>
        </Border>
    </Grid>
</Window>
